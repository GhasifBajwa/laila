<style>
  .gallery_Collection {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px 60px;
    text-align: center;
  }

  .item img {
    object-fit: cover;
    border: 1px solid #ccc;
    transition: transform 0.2s ease;
  }

  .caption {
    margin-top: 10px;
    font-size: 14px;
    font-weight: 900;
    font-family: sans-serif;
    line-height: 30px;
  }
</style>

<section>
  <div class="gallery_Collection">
    {% for collection in collections %}
      {% if collection.handle == 'collection-1' %}
        {% assign img_width = 250 %}
        {% assign img_height = 250 %}
      {% elsif collection.handle == 'collection-2' %}
        {% assign img_width = 205 %}
        {% assign img_height = 250 %}
      {% elsif collection.handle == 'collection-3' %}
        {% assign img_width = 482 %}
        {% assign img_height = 250 %}
      {% elsif collection.handle == 'collection-4' %}
        {% assign img_width = 347 %}
        {% assign img_height = 227 %}
      {% elsif collection.handle == 'collection-5' %}
        {% assign img_width = 230 %}
        {% assign img_height = 290 %}
      {% elsif collection.handle == 'collection-6' %}
        {% assign img_width = 258 %}
        {% assign img_height = 264 %}
      {% else %}
        {% assign img_width = 300 %}
        {% assign img_height = 250 %}
      {% endif %}

      <div class="item">
        <img
          src="{{ collection.image | image_url: width: img_width }}"
          alt="{{ collection.title }}"
          style="width: {{ img_width }}px; height: {{ img_height }}px;" />
        <div class="caption">{{ collection.title | upcase }}</div>
      </div>
    {% endfor %}
  </div>
</section>


<script>
  const items = document.querySelectorAll(".item img");
  
  document.addEventListener("mousemove", (e) => {
    items.forEach((img) => {
      const rect = img.getBoundingClientRect();
      const imgX = rect.left + rect.width / 2;
      const imgY = rect.top + rect.height / 2;
  
      const dx = e.clientX - imgX;
      const dy = e.clientY - imgY;
      const dist = Math.sqrt(dx * dx + dy * dy);
  
      const force = Math.min(15, 100 / dist);
      const moveX = -dx * force * 0.5;
      const moveY = -dy * force * 0.5;
  
      img.style.transform = `translate(${moveX}px, ${moveY}px)`;
    });
  });
  
  document.addEventListener("mouseleave", () => {
    items.forEach((img) => {
      img.style.transform = "translate(0, 0)";
    });
  });
</script>